<div class="back_button animate">

    <a href="/blogs" style="color: black; padding-left: 2vw;">&larr; Back</a>
</div>
<div class="form-outer">

    <div class="form-main">
        <div class="heading-update animate">
            <p>Update Post</p>
        </div>
        <form action="/update-post/<%= post._id  %>?_method=PUT" method="POST" class="update-post-form animate">
            <div>
                <label for="title">Title:</label>
                <input type="text" placeholder="Post Title" name="title" value="<%= post.title  %>">

            </div>
            <div>
                <label for="body">Content:</label>
                <textarea name="body" id="" cols="20" rows="20"><%= post.body %></textarea>

            </div>

            <input type="submit" value="Update" class="btn">
        </form>
    </div>

</div>